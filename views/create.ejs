<%- include('header') %>
  <%- include('components/nav') %>
  <%- include('components/nav-setting') %>
<div class="ui grid" style="padding-top:72px;">
  <div class="four wide column"></div>
  <div class="eight wide column">

  <% if (success) { %>
    <div class="ui success message">
      <p><%= success %></p>
    </div>
  <% } %>

  <% if (error) { %>
    <div class="ui error message">
      <p><%= error %></p>
    </div>
  <% } %>

  </div>
</div>
<div class="ui grid">
  <div class="eight wide column" style="margin: 0 auto; ">
    <h3 style="text-align:center;">发布文章</h3>
    <form class="ui form segment" method="post" action="/posts" enctype="multipart/form-data">
      <div class="field required">
        <label>标题</label>
        <input type="text" name="title">
      </div>
      <div class="field required">
        <label>内容</label>
        <textarea name="content" rows="15"></textarea>
      </div>
      <div class="field">
        <label>图片</label>
        <input type="file" name="pic" accept="image/jpeg,image/jpg,image/png">
      </div>
      <input type="submit" class="ui button" value="发布">
    </form>
  </div>
</div>

<%- include('footer') %>